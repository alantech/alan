from @std/app import start, print, exit

fn bar() {
  print('bar!');
}

fn baz() {
  print('baz!');
}

on start {
  if 1 == 0 {
    print('What!?');
  } else {
    print('Math is sane...');
  }

  if 1 == 0 {
    print('Not this again...');
  } else if 1 == 2 {
    print('Still wrong...');
  } else {
    print('Math is still sane, for now...');
  }

  const foo: bool = true == true;
  if foo bar else baz

  const isTrue = true == true;
  const then1 = fn {
    print("It's true!");
  };
  const then2 = fn {
    print("This should not have run");
  };
  if isTrue then1
  if !isTrue then2

  // cond(isTrue, fn {
  //   print("It's true!");
  // });
  // cond(!isTrue, fn {
  //   print('This should not have run');
  // });

  emit exit 0;
}
